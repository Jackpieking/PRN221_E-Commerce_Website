                @foreach (var item in Model.Pizzas)
                {
                    <div class="card col-3 mb-2">
                        <img src="~/img/@item.PizzaImage" class="card-img-top" alt="..." style="max-height: 200px">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Price VND</p>
                            <a asp-page="./Pizza" asp-route-id="@item.Id">Details</a>
                        </div>
                    </div>
                    <div class="col-1 mb-2"></div>
                }
            </div>
        </div>

